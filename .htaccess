# Security headers and ModSecurity bypass for free hosting
<IfModule mod_security.c>
    SecFilterEngine Off
    SecFilterScanPOST Off
</IfModule>

# Allow POST requests
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} POST
    RewriteRule .* - [E=HTTP_X_REQUESTED_WITH:XMLHttpRequest]
</IfModule>

# Allow access to uploads directory
<Directory "uploads">
    Options -Indexes
    AllowOverride None
    Require all granted
</Directory>

# Security: Prevent execution of PHP files in uploads
<Directory "uploads/logos">
    <Files "*.php">
        Require all denied
    </Files>
    <Files "*.phtml">
        Require all denied
    </Files>
    <Files "*.php3">
        Require all denied
    </Files>
    <Files "*.php4">
        Require all denied
    </Files>
    <Files "*.php5">
        Require all denied
    </Files>
</Directory>
